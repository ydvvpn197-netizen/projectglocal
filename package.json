{
  "name": "theglocal",
  "private": true,
  "version": "0.0.0",
  "homepage": "https://theglocal.in",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:analyze": "ANALYZE=true npm run dev",
    "build": "tsc && vite build",
    "build:dev": "vite build --mode development",
    "build:analyze": "ANALYZE=true npm run build",
    "build:prod": "tsc --noEmit && vite build --mode production",
    "build:optimized": "npm run build:prod && npm run analyze:bundle",
    "preview": "vite preview",
    "preview:prod": "npm run build:prod && npm run preview",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 1000",
    "lint:fix": "eslint . --fix",
    "type-check": "npx tsc --noEmit",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:debug": "vitest --inspect-brk",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "analyze:bundle": "npx vite-bundle-analyzer dist",
    "analyze:deps": "npx depcheck",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules package-lock.json",
    "reinstall": "npm run clean:all && npm install",
    "deploy": "npm run build && npm run deploy:package",
    "deploy:package": "node scripts/create-deployment-package.js",
    "deploy:domain": "node scripts/deploy-domain.js",
    "deploy:simple": "node scripts/simple-deploy.js",
    "deploy:fix": "node scripts/deploy-fix.js",
    "deploy:check": "node scripts/check-deployment.js",
    "deploy:windows": "npm run build && powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1",
    "deploy:github": "npm run build && gh-pages -d dist",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "setup:env": "node scripts/create-env.js",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase migration up",
    "db:generate": "supabase gen types typescript --local > src/types/supabase.ts",
    "start": "npm run preview",
    "start:prod": "npm run build:prod && npm run preview",
    "performance": "npm run build:prod && lighthouse dist/index.html --output=json --output-path=./lighthouse-report.json",
    "security": "npm audit && npm audit fix",
    "update": "npm update && npm audit fix"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-context-menu": "^2.1.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-menubar": "^1.0.4",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@stripe/react-stripe-js": "^2.4.0",
    "@stripe/stripe-js": "^2.4.0",
    "@supabase/supabase-js": "^2.38.4",
    "@tanstack/react-query": "^5.85.5",
    "@types/dompurify": "^3.0.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "^1.1.1",
    "date-fns": "^2.30.0",
    "dompurify": "^3.2.6",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^10.16.4",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.294.0",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-day-picker": "^8.9.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "react-resizable-panels": "^3.0.4",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.8.0",
    "sonner": "^1.2.4",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^20.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "depcheck": "^1.4.7",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "gh-pages": "^6.1.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "supabase": "^2.34.3",
    "tailwindcss": "^3.3.5",
    "terser": "^5.43.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^5.4.19",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
